<?xml version="1.0" encoding="windows-1252" ?>
<!DOCTYPE web-app 
   PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
          "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
  <description>Weblets</description>

  <filter>
    <filter-name>Weblets Filter</filter-name>
    <filter-class>net.java.dev.weblets.WebletsFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>Weblets Filter</filter-name>
    <url-pattern>/</url-pattern>
  </filter-mapping>
  
  <servlet>
    <servlet-name>Weblets Servlet</servlet-name>
    <servlet-class>net.java.dev.weblets.WebletsServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>Weblets Servlet</servlet-name>
    <url-pattern>/weblets/*</url-pattern>
  </servlet-mapping>

</web-app>
